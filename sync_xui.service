[Unit]
Description=sync x-ui subscriptions (sqlite)
After=network.target

[Service]
Type=simple
User=root
ExecStart=/usr/bin/env python3 /usr/local/bin/sync_xui_sqlite.py \
          --db /etc/x-ui/x-ui.db \
          --interval 30 \
          --apply \
          --backup
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target